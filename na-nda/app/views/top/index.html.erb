<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <h2><%= entry.title %></h2>
    <p><%= truncate(entry.body, length: 80) %>
      <%= link_to "もっと読む", entry %></p>
    <%= render "footer", entry: entry %>
  <% end %>
  <%= will_paginate @entries %>
<% else %>
  <p>記事がありません。</p>
<% end %>
