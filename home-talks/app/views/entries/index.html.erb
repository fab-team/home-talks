<%# @page_title = current_user ? current_user.name + "さんのブログ" : "会員のブログ" %>
<h1><%= @page_title %></h1>

<% if @entries.present? %>
<% @entries.each do |entry| %>
<h2><%= entry.title %></h2>

<p>Tags: <%= entry.tag_list %></p>
<p>Tags: <%= entry.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>

<p>
	<%= truncate(entry.body) %>
	<%= link_to "もっと読む", entry %>
</p>

<% end %>
<%= will_paginate @entries %>
<% else %>
<p>記事がありません。</p>
<% end %>
