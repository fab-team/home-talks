<%= render "shared/errors", obj: @entry %>

<div class="p-form">

  <!-- <div class='field'> -->
    <%#= form.label :tag_list, 'Tags (separated by commas)' %>
    <%#= form.text_field :tag_list %>
    <!-- </div> -->

    <div class="p-form__item">
      <div class="p-form__heading">
        <%= form.label :title %><span class="p-form__tag--important">必須</span>
      </div>
      <div class="p-form__date">
        <%= form.text_field :title%>
      </div>
    </div>

    <div class="p-form__item">
      <div class="p-form__heading">
        <%= form.label :sex_list, 'ホメたい人の性別' %>
      </div>
      <div class="p-form__date">
        <div class="p-form__date__radio">
          <%= form.radio_button :sex_list, :男性, checked: "checked", class: "p-form__date__radio--btn" %>
          <%= form.label :sex_list_男性, "男性", class: "p-form__date__radio--label" %>

          <%= form.radio_button :sex_list, :女性, class: "p-form__date__radio--btn" %>
          <%= form.label :sex_list_女性, "女性", class: "p-form__date__radio--label" %>
      </div>
      </div>
    </div>

    <div class="p-form__item">
      <div class="p-form__heading">
        <%= form.label :job_list, 'ホメたい人の職業' %>
      </div>
      <div class="p-form__date">
        <%= form.radio_button :job_list, :一般事務, checked: "checked", class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_一般事務, "一般事務", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :営業, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_営業, "営業", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :人事担当, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_人事担当, "人事担当", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :主婦, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_主婦, "主婦", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :デザイナー, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_デザイナー, "デザイナー", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :プログラマー, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_プログラマー, "プログラマー", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :就活生, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_就活生, "就活生", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :ブロガー, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_ブロガー, "ブロガー", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :ミュージシャン, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_ミュージシャン, "ミュージシャン", class: "p-form__date__radio--label" %>

        <%= form.radio_button :job_list, :その他, class: "p-form__date__radio--btn" %>
        <%= form.label :job_list_その他, "その他", class: "p-form__date__radio--label" %>
      </div>
    </div>

    <div class="p-form__item">
      <div class="p-form__heading">
        <%= form.label :body %>
      </div>
      <div class="p-form__date">
        <%= form.text_area :body%>
        <span class="p-form__annotation">※ホメたい人へのエピソードがあったら書いてください。</span>
      </div>
    </div>

    <div class="p-form__item" style="display: none;">
      <div class="p-form__heading">
        <%= form.label :posted_at, for: "entry_posted_at_1i" %>
      </div>
      <div class="p-form__date">
        <%= form.datetime_select :posted_at,
        start_year: 2000, end_year: Time.now.year + 1,
        use_month_numbers: true %>
      </div>
    </div>

    <% if @current_user.admin_flg == true %>

    <div class="p-form__item">
      <div class="p-form__heading">
        <%= form.label :status %>
      </div>
      <div class="p-form__date">
        <%= form.select :status, Entry.status_options %>
      </div>
    </div>
    <% end %>
  </div>
